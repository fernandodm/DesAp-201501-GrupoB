<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                                   "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping default-access="field"
	default-cascade="save-update">
	<class name="ar.edu.unq.desapp.groupb.model.MedicalHistory">
		<id column="ID" name="id">
			<generator class="native" />
		</id>

		<list name="allergies" lazy="false">  
          <key column="allergyID"></key>  
          <index column="type"></index>  
          <element column="allergy" type="string"></element>  
        </list>
          
		<list name="events" cascade="save-update" lazy="false">
			<key column="eventID" />
			<list-index column="id" />
			<one-to-many class="ar.edu.unq.desapp.groupb.model.Event"/>
		</list>
		
	</class>
</hibernate-mapping>
